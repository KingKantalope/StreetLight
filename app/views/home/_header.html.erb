          <%= image_tag "StreetLight_Logo.png", class:"img-fluid", style:"max-width: 50%" %>
        </center>
      </div>
      <!-- Add Logo Here -->
      <hr class="bg-success border-2 border-top border-success">
      <div class="row" style="transform: rotate(0);">
        <h1>Profile</h1><%= link_to "", home_profile_path, class:"stretched-link" %>
      </div>
      <hr class="bg-success border-2 border-top border-success">
      <div class="row" style="transform: rotate(0);">
        <h1>Live Map</h1><%= link_to "", home_livemap_path, class:"stretched-link" %>
      </div>
      <hr class="bg-success border-2 border-top border-success">
      <div class="row" style="transform: rotate(0);">
        <h1>Reports</h1><%= link_to "", reports_path, class:"stretched-link" %>
      </div>
