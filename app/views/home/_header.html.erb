        <%= image_tag "Hamburger_icon.png", style:"width: 50%" %>
      </button>
    </div>
    <div class="col-4">
      <%= link_to image_tag("Report_icon.png", style:"width: 50%"), new_report_path, class:"btn btn-success" %>
