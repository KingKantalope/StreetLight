      <div class="row" style="transform: rotate(0);">
        <h1>About Us</h1><%= link_to "", home_about_path, class:"stretched-link" %>
      </div>
        <!-- Sign up/in/out buttons -->
      <div class="row">
        <div class="col fixed-bottom mx-auto">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class:"btn btn-success" %>
